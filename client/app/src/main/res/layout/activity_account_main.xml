<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">
    <!-- Toolbar -->
    <include
        android:id="@+id/top_toolbar"
        layout="@layout/activity_toolbar"
        android:layout_width="match_parent"
        android:layout_height="126dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <FrameLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        app:layout_constraintTop_toBottomOf="@id/top_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 텍스트 뷰 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WALLET"
            style="@style/title_style"
            android:gravity="center"
            android:layout_gravity="center" />

        <!-- 아래 수평선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#B5C9DF"
            android:layout_gravity="bottom" />
    </FrameLayout>
    <TextView
        android:id="@+id/account_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내 계좌"
        style="@style/account_title_style"
        android:layout_marginStart="36dp"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@id/title_bar"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/account_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0원"
        style="@style/account_main_style"
        android:layout_marginTop="39dp"
        app:layout_constraintTop_toBottomOf="@id/account_title"
        app:layout_constraintStart_toStartOf="@id/account_title"
        />
    <ImageButton
        android:id="@+id/setting_button"
        android:layout_width="19.65dp"
        android:layout_height="20dp"
        android:src="@drawable/setting_icon"
        android:layout_marginEnd="29.35dp"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@id/title_bar"
        app:layout_constraintEnd_toEndOf="parent" />
    <Button
        android:id="@+id/DepositButton"
        android:layout_width="84dp"
        android:layout_height="40dp"
        android:layout_marginEnd="9dp"
        android:background="@drawable/rounded_button2"
        android:text="입금하기"
        style="@style/account_deposit_style"
        app:layout_constraintTop_toTopOf="@id/WithdrawalButton"
        app:layout_constraintEnd_toStartOf="@id/WithdrawalButton" />
    <Button
        android:id="@+id/WithdrawalButton"
        android:layout_width="84dp"
        android:layout_height="40dp"
        android:layout_marginTop="121dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rounded_button"
        android:text="출금하기"
        style="@style/account_deposit_style"
        app:layout_constraintTop_toBottomOf="@id/title_bar"
        app:layout_constraintEnd_toEndOf="parent" />
    <View
        android:id="@+id/horizon"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#B5C9DF"
        android:layout_marginTop="69dp"
        app:layout_constraintTop_toBottomOf="@id/account_amount"
        app:layout_constraintStart_toStartOf="@id/account_amount"
        />
    <LinearLayout
        android:id="@+id/log_toggle_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/horizon"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/btn_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="14dp"
                android:text="전체"
                style="@style/account_toggle_style"
                android:padding="6dp"
                android:background="?attr/selectableItemBackground"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <View
                android:id="@+id/underline_all"
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:background="@color/black"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/btn_all"
                app:layout_constraintStart_toStartOf="@id/btn_all"
                app:layout_constraintEnd_toEndOf="@id/btn_all" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/btn_income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="14dp"
                android:text="입금"
                style="@style/account_toggle_style"
                android:padding="6dp"
                android:background="?attr/selectableItemBackground"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <View
                android:id="@+id/underline_income"
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:background="@color/black"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/btn_income"
                app:layout_constraintStart_toStartOf="@id/btn_income"
                app:layout_constraintEnd_toEndOf="@id/btn_income" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/btn_expense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="14dp"
                android:text="출금"
                style="@style/account_toggle_style"
                android:padding="6dp"
                android:background="?attr/selectableItemBackground"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <View
                android:id="@+id/underline_expense"
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:background="@color/black"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/btn_expense"
                app:layout_constraintStart_toStartOf="@id/btn_expense"
                app:layout_constraintEnd_toEndOf="@id/btn_expense" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/log_toggle_button"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        tools:listitem="@layout/item_account_log" />

    <include
        android:id="@+id/bottom_navigation"
        layout="@layout/activity_bottom_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>