<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <!-- 상단 툴바 -->
    <include
        android:id="@+id/top_toolbar"
        layout="@layout/activity_toolbar"
        android:layout_width="match_parent"
        android:layout_height="126dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <!-- 상단 타이틀 바 -->
    <FrameLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        app:layout_constraintTop_toBottomOf="@id/top_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <!-- 텍스트 뷰 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/paylog_title_txt"
            style="@style/title_style"
            android:gravity="center"
            android:layout_gravity="center" />
        <!-- 아래 수평선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#B5C9DF"
            android:layout_gravity="bottom" />
    </FrameLayout>
    <!-- 컨텐츠 영역 -->
    <include
        android:id="@+id/item_post_detail"
        layout="@layout/item_post2"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintTop_toBottomOf="@id/title_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <View
        android:id="@+id/post_horizon"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D9D9D9"
        android:layout_gravity="bottom"
        app:layout_constraintTop_toBottomOf="@id/item_post_detail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/comment_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/post_horizon"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <TextView
        android:id="@+id/emptyMessageTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="첫 댓글을 남겨주세요."
        android:gravity="center"
        android:visibility="gone"
        style="@style/comment_post_style"
        app:layout_constraintTop_toBottomOf="@id/post_horizon"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
        android:id="@+id/comment_input"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:hint="댓글을 입력하세요."
        android:fontFamily="@font/inter_18pt_medium"
        android:textSize="20sp"
        android:textColorHint="#757575"
        android:padding="0dp"
        android:paddingStart="22dp"
        android:paddingBottom="19dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/rounded_border2"
        app:layout_constraintStart_toStartOf="@id/bottom_navigation"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation" />
    <Button
        android:id="@+id/register_button"
        android:layout_width="84dp"
        android:layout_height="44dp"
        android:text="등록"
        style="@style/sign_up_style"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_button6"
        app:layout_constraintBottom_toBottomOf="@id/comment_input"
        app:layout_constraintEnd_toEndOf="@id/comment_input"
        />
    <!-- 하단 네비게이션바 -->
    <include
        android:id="@+id/bottom_navigation"
        layout="@layout/activity_bottom_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>