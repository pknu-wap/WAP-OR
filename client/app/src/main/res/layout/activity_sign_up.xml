<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:includeFontPadding="false"
    android:paddingStart="28dp"
    android:paddingEnd="28dp"
    >
    <TextView
        android:id="@+id/signUpTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="81.33dp"
        android:text="회원가입"
        android:textAppearance="@style/sign_up_title_style"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/signUpSubTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7.56dp"
        android:text="가입을 통해 다양한 서비스를 만나보세요 !"
        android:textSize="13sp"
        android:textColor="#000000"
        android:fontFamily="@font/inter_18pt_regular"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@id/signUpTitleText"
        app:layout_constraintTop_toBottomOf="@id/signUpTitleText"
        />
    <TextView
        android:id="@+id/signUpEmailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="181.09dp"
        android:text="이메일"
        android:textSize="15sp"
        android:textColor="#000000"
        android:fontFamily="@font/inter_18pt_regular"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <EditText
        android:id="@+id/Email"
        android:layout_width="0dp"
        android:layout_height="45.05dp"
        android:layout_marginTop="9.91dp"
        android:background="@drawable/rounded_border"
        android:hint="tester776@example.com"
        android:fontFamily="@font/inter_18pt_regular"
        android:textSize="13sp"
        android:textColor="#ABABAB"
        android:paddingStart="10.7dp"
        android:paddingTop="14.08dp"
        android:paddingBottom="14.92dp"
        app:layout_constraintTop_toBottomOf="@id/signUpEmailText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/SubmitButton"
        app:layout_constraintWidth_percent="0.629"
        />
    <Button
        android:id="@+id/SubmitButton"
        android:layout_width="0dp"
        android:layout_height="45.05dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/rounded_button3"
        android:text="인증번호 전송"
        style="@style/submit_style"
        app:layout_constraintStart_toEndOf="@id/Email"
        app:layout_constraintTop_toTopOf="@id/Email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.349"/>
    <TextView
        android:id="@+id/wrongInputText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9.13dp"
        android:layout_marginStart="10.7dp"
        android:text="이메일이 유효하지 않습니다."
        android:textAppearance="@style/alert_style2"
        android:textSize="11sp"
        android:textColor="#FF6464"
        android:fontFamily="@font/inter_18pt_regular"
        android:gravity="center"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/Email"
        app:layout_constraintStart_toStartOf="@+id/Email"
        />
    <EditText
        android:id="@+id/CertificationNumber"
        android:layout_width="0dp"
        android:layout_height="45.05dp"
        android:layout_marginTop="7.56dp"
        android:background="@drawable/rounded_border"
        android:hint="인증번호 6자리"
        android:fontFamily="@font/inter_18pt_regular"
        android:textSize="13sp"
        android:textColor="#ABABAB"
        android:paddingStart="10.7dp"
        android:paddingTop="14.08dp"
        android:paddingBottom="14.92dp"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/Email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/SubmitButton2"
        app:layout_constraintWidth_percent="0.629" />

    <Button
        android:id="@+id/SubmitButton2"
        android:layout_width="0dp"
        android:layout_height="45.05dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/rounded_button3"
        android:text="인증하기"
        style="@style/submit_style"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@id/CertificationNumber"
        app:layout_constraintTop_toTopOf="@id/CertificationNumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.349" />
    <TextView
        android:id="@+id/wrongInputText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9.13dp"
        android:layout_marginStart="10.7dp"
        android:text="인증번호가 일치하지 않습니다."
        android:textAppearance="@style/alert_style2"
        android:textSize="11sp"
        android:textColor="#FF6464"
        android:fontFamily="@font/inter_18pt_regular"
        android:gravity="center"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/CertificationNumber"
        app:layout_constraintStart_toStartOf="@+id/CertificationNumber"
         />
    <TextView
        android:id="@+id/signUpPasswordText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="402.27dp"
        android:text="비밀번호"
        android:textSize="15sp"
        android:textColor="#000000"
        android:fontFamily="@font/inter_18pt_regular"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <EditText
        android:id="@+id/passwordInput"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="9.46dp"
        android:background="@drawable/rounded_border"
        android:hint="비밀번호 입력 (문자, 숫자포함 8~20자)"
        android:fontFamily="@font/inter_18pt_regular"
        android:textSize="13sp"
        android:textColor="#ABABAB"
        android:paddingStart="10.7dp"
        android:paddingTop="14.5dp"
        android:paddingBottom="14.5dp"
        app:layout_constraintTop_toBottomOf="@id/signUpPasswordText"
        app:layout_constraintStart_toStartOf="@id/signUpPasswordText"
        />
    <ImageView
        android:id="@+id/lockIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/lock_icon"
        app:layout_constraintEnd_toEndOf="@id/passwordInput"
        app:layout_constraintTop_toTopOf="@id/passwordInput"
        app:layout_constraintBottom_toBottomOf="@id/passwordInput"
        android:layout_marginEnd="12dp"/>
    <EditText
        android:id="@+id/passwordReInput"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="7.62dp"
        android:background="@drawable/rounded_border"
        android:hint="비밀번호 재입력"
        android:fontFamily="@font/inter_18pt_regular"
        android:textSize="13sp"
        android:textColor="#ABABAB"
        android:paddingStart="10.7dp"
        android:paddingTop="14.5dp"
        android:paddingBottom="14.5dp"
        app:layout_constraintTop_toBottomOf="@id/passwordInput"
        app:layout_constraintStart_toStartOf="@id/passwordInput"
        />
    <ImageView
        android:id="@+id/lockIcon2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/lock_icon"
        app:layout_constraintEnd_toEndOf="@id/passwordReInput"
        app:layout_constraintTop_toTopOf="@id/passwordReInput"
        app:layout_constraintBottom_toBottomOf="@id/passwordReInput"
        android:layout_marginEnd="12dp"/>
    <TextView
        android:id="@+id/wrongInputTextPw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_marginStart="10.7dp"
        android:text="비밀번호가 일치하지 않습니다."
        android:textAppearance="@style/alert_style2"
        android:textSize="11sp"
        android:textColor="#FF6464"
        android:fontFamily="@font/inter_18pt_regular"
        android:gravity="center"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/passwordReInput"
        app:layout_constraintStart_toStartOf="@id/passwordReInput"
        />
    <Button
        android:id="@+id/SignUPButton"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginBottom="52.71dp"
        android:background="@drawable/rounded_button4"
        android:text="가입하기"
        style="@style/sign_up_style"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>