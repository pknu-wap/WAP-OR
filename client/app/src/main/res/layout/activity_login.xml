<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="0dp">

    <!-- 로고 이미지 -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="170dp"
        android:layout_height="71dp"
        android:layout_marginTop="227dp"
        android:layout_marginBottom="634dp"
        android:layout_marginStart="133dp"
        android:layout_marginEnd="127dp"
        android:contentDescription="App Logo"
        android:src="@drawable/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!-- 아이디 텍스트 박스 -->
    <EditText
        android:id="@+id/editTextUsername"
        android:layout_width="265dp"
        android:layout_height="35dp"
        android:layout_marginTop="394dp"
        android:layout_marginBottom="503dp"
        android:layout_marginStart="83dp"
        android:layout_marginEnd="82dp"
        android:background="#D9D9D9"
        android:hint="(아이디)"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 비밀번호 텍스트 박스 -->
    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="265dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextUsername"
        app:layout_constraintStart_toStartOf="@+id/editTextUsername"
        android:layout_marginTop="15dp"
        android:background="#D9D9D9"
        android:gravity="center"
        android:hint="(비번)"
        android:inputType="textPassword" />

    <!-- Remember Me 체크박스 -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="499dp"
        android:layout_marginBottom="406dp"
        android:layout_marginStart="163dp"
        android:layout_marginEnd="162dp"

        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <CheckBox
            android:id="@+id/checkBoxRememberMe"
            android:layout_width="19dp"
            android:layout_height="24dp"
            android:background="@drawable/check_box"
            android:button="@null" />

        <TextView
            android:layout_width="88dp"
            android:layout_height="24dp"
            android:layout_marginTop="3dp"
            android:gravity="center_vertical"
            android:text=" Remember me"
            android:textSize="12sp" />
    </LinearLayout>
    <!-- 카카오 로그인 버튼 -->
    <ImageButton
        android:id="@+id/kakaoLoginButton"
        android:layout_width="275dp"
        android:layout_height="60dp"
        android:layout_marginStart="73dp"
        android:layout_marginEnd="82dp"
        android:layout_marginTop="630dp"
        android:layout_marginBottom="242dp"
        android:src="@drawable/kakao_login_medium_narrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!-- 로그인 버튼 -->
    <Button
        android:id="@+id/loginButton"
        android:layout_width="265dp"
        android:layout_height="57dp"
        android:layout_marginStart="83dp"
        android:layout_marginEnd="82dp"
        android:layout_marginTop="797dp"
        android:layout_marginBottom="78dp"
        android:text="LOG IN"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>