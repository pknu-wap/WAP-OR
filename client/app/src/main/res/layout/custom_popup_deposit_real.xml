<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="338.14dp"
        android:layout_height="137.84dp"
        android:background="@drawable/popup_top"
        >
        <TextView
            android:id="@+id/deposit_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="입금하기"
            style="@style/popup_title_style"
            android:gravity="center"
            android:layout_marginTop="29.5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <EditText
            android:id="@+id/price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9.73dp"
            android:layout_marginEnd="20dp"
            android:text="10000"
            android:inputType="number"
            style="@style/account_main_style"
            android:gravity="center"
            android:background="@null"
            app:layout_constraintTop_toBottomOf="@id/deposit_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <TextView
            android:id="@+id/price_text_won"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="원"
            android:gravity="center"
            style="@style/account_main_style"
            app:layout_constraintTop_toTopOf="@id/price_text"
            app:layout_constraintStart_toEndOf="@id/price_text" />
        <ImageButton
            android:id="@+id/cancel_button"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/x_icon"
            android:layout_marginEnd="17.56dp"
            android:layout_marginTop="14.5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="338.14dp"
        android:layout_height="47.66dp"
        android:background="@drawable/popup_bottom"
        >
        <TextView
            android:id="@+id/confirm_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13.72dp"
            android:text="완료"
            android:background="@android:color/transparent"
            style="@style/submit_style"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>