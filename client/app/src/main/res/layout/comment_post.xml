<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="113dp">
    <ImageView
        android:id="@+id/user_profile"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginTop="19dp"
        android:layout_marginStart="24.62dp"
        android:src="@drawable/user_profile_tmp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/comment_post_username"
        style="@style/comment_post_username_style"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="7.75dp"
        android:text="와포어 회원1"
        app:layout_constraintBottom_toBottomOf="@id/user_profile"
        app:layout_constraintStart_toEndOf="@id/user_profile"
        />
    <ImageButton
        android:id="@+id/menu_button"
        android:layout_width="2.67dp"
        android:layout_height="12dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="23.5dp"
        android:src="@drawable/menu_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/post_main_text"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:layout_marginTop="11dp"
        android:layout_marginStart="59.5dp"
        android:layout_marginEnd="21.5dp"
        android:text="얼음 물고 하세요.."
        style="@style/post_main_text_style"
        app:layout_constraintTop_toBottomOf="@id/comment_post_username"
        app:layout_constraintStart_toStartOf="@id/comment_post_username"
        />
    <TextView
        android:id="@+id/post_created_date"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_marginStart="24.5dp"
        android:layout_marginBottom="15dp"
        android:text="20분 전"
        style="@style/post_created_date_style"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/post_comment_count"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginBottom="3.12dp"
        android:layout_marginEnd="5dp"
        android:text="1"
        style="@style/post_category_cash_style"
        app:layout_constraintBottom_toBottomOf="@id/post_comment_icon"
        app:layout_constraintEnd_toStartOf="@id/post_comment_icon" />
    <ImageView
        android:id="@+id/post_comment_icon"
        android:layout_width="25.23dp"
        android:layout_height="25.23dp"
        android:layout_marginEnd="21.5dp"
        android:layout_marginBottom="14.77dp"
        android:src="@drawable/post_comment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>