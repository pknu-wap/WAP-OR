<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="0dp">

<ImageView
    android:id="@+id/logo"
    android:layout_width="265dp"
    android:layout_height="131dp"
    android:layout_marginTop="181dp"
    android:layout_marginBottom="620dp"
    android:layout_marginStart="83dp"
    android:layout_marginEnd="82dp"
    android:contentDescription="App Logo"
    android:src="@drawable/wapor"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
/>
    <EditText
        android:layout_width="265dp"
        android:layout_height="49dp"
        android:id="@+id/login"
        android:layout_marginTop="380dp"
        android:layout_marginBottom="503dp"
        android:layout_marginStart="86dp"
        android:layout_marginEnd="79dp"
        android:contentDescription="Login Input"
        android:background="#E7E7E7"
        android:hint="아이디 입력"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <EditText
        android:layout_width="265dp"
        android:layout_height="49dp"
        android:id="@+id/password"
        android:layout_marginTop="11dp"
        android:contentDescription="Password Input"
        android:background="#E7E7E7"
        android:hint="비밀번호 입력"
        app:layout_constraintTop_toBottomOf="@+id/login"
        app:layout_constraintStart_toStartOf="@+id/login"
        />
    <TextView
        android:layout_width="182dp"
        android:layout_height="15dp"
        android:id="@+id/wrongInputText"
        android:layout_marginTop="28dp"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="45dp"
        android:text="@string/wrong_intput_txt"
        android:textAppearance="@style/alert_style"
        app:layout_constraintTop_toBottomOf="@+id/password"
        app:layout_constraintStart_toStartOf="@+id/password"
        />
    <ImageButton
        android:layout_width="123dp"
        android:layout_height="122dp"
        android:id="@+id/kakaoLoginButton"
        android:layout_marginTop="612dp"
        android:layout_marginBottom="198dp"
        android:layout_marginStart="157dp"
        android:layout_marginEnd="150dp"
        android:src="@drawable/kakao"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
/>
<Button
    android:layout_width="265dp"
    android:layout_height="57dp"
    android:id="@+id/LoginButton"
    android:layout_marginTop="797dp"
    android:layout_marginBottom="78dp"
    android:layout_marginStart="83dp"
    android:layout_marginEnd="82dp"
    android:background="@drawable/rounded_button"
    android:text="LOG IN"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    />

</androidx.constraintlayout.widget.ConstraintLayout>